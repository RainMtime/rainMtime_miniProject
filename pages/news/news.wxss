/* pages/news/news.wxss */

.news_group{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;

}

.news_left{
  width: 100%;
  height: 100%;
}

.news_group:before{
  content: "";
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  height: 1px;
  margin-top: -30rpx;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}

.news_group:first-child:before{
  display: none;
}
.news_left_title{
  text-align: center;
  font-size: 36rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.news_group .new_group_image{
  margin-left: 20rpx;
  height: 100rpx;
  width:  180rpx;
  border-radius: 10rpx;
}

.swiper-container{
  width: 100%;
  height: 550rpx;
  display: flex;
  justify-content: space-around;
}

 .swiper-container swiper{
   width:100%;
   height: 550rpx;
 }
 .swiper-item-image{
   width: 100%;
   height: 100%;
 }
 