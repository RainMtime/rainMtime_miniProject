/**index.wxss**/
.module-container{
  padding: 30rpx;
}
.module-top{
  display: flex;
  justify-content: space-between;
  additive-symbols: 30rpx;
  background: #fff;
  font-size: 30rpx;

}

.more-text{
  color: #67ba62;
}
.module-bottom{
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}

.movie-group{
  height:400rpx;
  width: 200rpx; 
  margin-right: 30rpx;
  display: inline-block;
}

.movie-group:last-of-type{
  margin-right: 0rpx;
} 
.movie-group image{
  width: 200rpx;
  height: 300rpx;
  border-radius: 10rpx;
}
.movie-title{
  text-align: center;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}



